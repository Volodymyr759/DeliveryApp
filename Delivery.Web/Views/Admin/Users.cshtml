@model IEnumerable<Delivery.Web.Models.AppUserViewModel>

@{
    ViewBag.Title = "Користувачі";
}

<h2>Користувачі</h2>

<table class="table">
    <tr>
        <th>Ім'я користувача</th><th>Email</th><th>Пароль</th><th>Роль</th><th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.UserName)</td>
        <td>@Html.DisplayFor(modelItem => item.Email)</td>
        <td>@Html.DisplayFor(modelItem => item.Password)</td>
        <td>@Html.DisplayFor(modelItem => item.Role)</td>
        <td>
            @Html.ActionLink("Details", "UserDetails", new { id=item.Id }) |
            @Html.ActionLink("Delete", "DeleteUser", new { id=item.Id })
        </td>
    </tr>
}

</table>
